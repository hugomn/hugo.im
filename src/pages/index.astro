---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import FeaturedCard from "@components/FeaturedCard.astro";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SITE, SOCIALS } from "@config";
import { getTranslator, localizeUrl } from "@utils/i18n";

const posts = await getCollection("blog");

const locale = "en";
const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(
  ({ data }) => data.featured && data.locale == locale
);
const recentPosts = sortedPosts.filter(
  ({ data }) => !data.featured && data.locale == locale
);

const socialCount = SOCIALS.filter(social => social.active).length;
const t = getTranslator(Astro.currentLocale);

// Structured data for Hugo Nogueira as Person
const personStructuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Hugo Nogueira",
  "jobTitle": "Chief Product & Technology Officer",
  "worksFor": {
    "@type": "Organization",
    "name": "Complyance",
    "description": "Enterprise GRC (Governance, Risk & Compliance) Platform"
  },
  "url": "https://hugo.im",
  "sameAs": [
    "https://github.com/hugomn",
    "https://linkedin.com/in/hugomn",
    "https://twitter.com/hugomn"
  ],
  "knowsAbout": [
    "Technology Leadership",
    "Product Strategy",
    "Engineering Leadership", 
    "AI Platform Architecture",
    "LLM Pipeline Development",
    "Model Training and Fine-tuning",
    "AI System Deployment and Scaling",
    "Organizational Scaling",
    "Software Architecture",
    "Cloud Platforms",
    "Enterprise Software",
    "GRC Technology",
    "Team Management",
    "Strategic Planning",
    "TypeScript",
    "React",
    "Node.js",
    "Modern Development Practices"
  ],
  "hasOccupation": {
    "@type": "Occupation",
    "name": "Chief Product & Technology Officer",
    "occupationLocation": {
      "@type": "Place",
      "name": "Global/Remote"
    },
    "skills": [
      "Executive Leadership",
      "Product Strategy", 
      "AI Platform Architecture",
      "LLM System Development",
      "Model Training and Deployment",
      "Technology Architecture",
      "Team Scaling",
      "Enterprise Software Development"
    ]
  },
  "description": "Chief Product & Technology Officer specializing in AI platform architecture, LLM system development, and scaling AI-enabled organizations. 20 years experience from individual contributor to C-level executive."
};

// Website structured data  
const websiteStructuredData = {
  "@context": "https://schema.org",
  "@type": "Website",
  "name": "Hugo Nogueira - Technology Leadership & AI Development",
  "url": "https://hugo.im",
  "author": {
    "@type": "Person",
    "name": "Hugo Nogueira",
    "jobTitle": "Chief Product & Technology Officer"
  },
  "description": "Technology leadership insights by Hugo Nogueira, CPTO at Complyance. Expertise in AI platform architecture, LLM system development, engineering leadership, and scaling AI-enabled organizations.",
  "keywords": "technology leadership, CPTO, AI platform architecture, LLM development, model training, product strategy, engineering management, enterprise software, scaling teams",
  "audience": {
    "@type": "Audience",
    "name": "Technology Executives and Engineering Leaders"
  }
};
---

<Layout>
  <!-- Structured Data for LLM Optimization -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(personStructuredData)}></script>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteStructuredData)}></script>
  
  <Header />
  <main id="main-content">
    <section id="hero">
      <h1 set:html={t("home.title")} />
      <a
        target="_blank"
        href="/rss.xml"
        class="rss-link"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>

      <p set:html={t("home.bio")} />
      {
        // only display if at least one social link is enabled
        socialCount > 0 && (
          <div class="social-wrapper">
            <div class="social-links hidden">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <div class="featured-container">
              <h2>Featured Posts</h2>
              <div class="featured-grid">
                {featuredPosts.map(({ data }) => (
                  <FeaturedCard
                    href={localizeUrl(
                      Astro.currentLocale,
                      `/posts/${data.postSlug}/`
                    )}
                    frontmatter={data}
                  />
                ))}
              </div>
            </div>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={localizeUrl(
                      Astro.currentLocale,
                      `/posts/${data.postSlug}/`
                    )}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <LinkButton href="/posts/">
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-10 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured Posts Section ===== */
  #featured {
    @apply py-12;
  }

  @media (min-width: 768px) {
    #featured {
      @apply py-16;
    }
  }

  .featured-container {
    @apply mx-auto;
    max-width: 1280px;
  }

  .featured-grid {
    @apply my-6 grid grid-cols-1 gap-6;
  }

  @media (min-width: 768px) {
    .featured-grid {
      @apply grid-cols-2;
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      @apply grid-cols-4;
    }
  }

  /* ===== Recent Posts Section ===== */
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #recent-posts h2,
  #featured h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
